{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./src",
    "types": ["node"],
    "emitDeclarationOnly": true
  },
  "exclude": [
    "**/*.spec.js",
    "**/*.spec.ts"
  ],
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
